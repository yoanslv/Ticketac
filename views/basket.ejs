<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Ticketac</title>
    <!-- To add in order to scale the view for mobiles -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://fonts.googleapis.com/css?family=Darker+Grotesque&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a41e9403cf.js" crossorigin="anonymous"></script>
  </head>
  <body>
    



      <div class="home d-flex flex-column container-fluid">

        <div class="row headerlogin">

          <nav class=" header col-12 navbar navbar-light p-1 bg-light h6 font-weight-normal ">
              <a class="navbar" href="/">
              <img src="/images/train.png" width="30" height="30" class="logo mr-2" alt="">
              Ticketac
              </a>
              <div class="header-right ">
              <a href="/logout" ><span class="Connection mr-3 text-danger font-weight-bold">Deconnection</span></a>
              <a href="/mylasttrips" ><span>My last trip</span></a>
              </div>
          </nav>
    
      </div>

       


          
          <div class="text-center container-fluid text-white mt-5">


            <% if(checkout === true){ %>
            <div class="modal fade text-dark" id="checkoutModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Succesfull order</h5>
                    <a href="/home"><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button></a>
                  </div>
                  <div class="modal-body">
                    Your order is succesfull
                  </div>
                  <div class="modal-footer">
                    <a href="/home"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Go back to Homepage</button></a>
                  </div>
                </div>
              </div>
            </div>
            <% } %>

            
                <div class="row mt-3 col-10 offset-1">
                    <h3 class="sucesstrain" >My tickets:</h3>
                    <table class="table table-light text-dark table-borderless">
                        <thead>
                          <tr>
                            <th scope="col">N°</th>
                            <th scope="col">Journey</th>
                            <th scope="col">Date</th>
                            <th scope="col">Departure Time</th>
                            <th scope="col">Price</th>
                            <th scope="col"></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% let total = 0;
                             let count = 0;
                            for(element of basket){
                               %>
                          <tr>
                            <th scope="row">1</th>
                            <td><%=element.departure%> / <%=element.arrival%></td>
                            <td><%=dateFormat(element.date)%></td>
                            <td><%=element.departureTime%></td>
                            <td><%=element.price%></td>
                            <td><a href="/deletetrip?id=<%=count%>"><button class="btn btn-outline-info btn-sm" name="button"><i class="far fa-trash-alt"></i></button></a></td>
                          </tr>
                          <% total += Number(element.price);
                           count++; } %>
                          
                          <tr class="table-danger">
                            <th scope="row ">Total</th>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><%=total%>€</td>
                            <td></td>
                          </tr>
                        </tbody>
                      </table>
                    <div class= "d-flex flex-row-reverse w-100"> 
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-danger mt-4y" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                  Checkout
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">
                        <div class="modal-content">
                         <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                             <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                         </div>
                         <div class="modal-body">
                            ...
                         </div>
                       <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                       <button type="button" class="btn btn-primary">Understood</button>
                       </div>
                        </div>
                         </div>
                        </div>    
                    </div>
                  </div>
                  
                </div>
                
                

                
          

        

          

        </div>
      </div>



