<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Ticketac</title>
    <!-- To add in order to scale the view for mobiles -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" >
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>

    
      <div class="home d-flex flex-column container-fluid">

        <div class="row ">

          <nav class=" header col-12 navbar navbar-light p-1 bg-light h6 font-weight-normal ">
              <a class="navbar">
              <img src="/images/train.png" width="30" height="30" class="logo mr-2" alt="">
              Ticketac
              </a>
          </nav>
    
      </div>

        <div class="login row text-white">

          <div class="container-fluid d-flex ">

          <!-- SIGN IN AREA -->
          <div class="col-12 col-sm-6">

            <div class="formArea">
              <h4 class="titleForm ml-0 mr-0 mb-3">Sign in: </h4>
              <form action="/users/sign-in" method="POST">
                <div class="form-group">
                  <input name="emailFromFront" type="email" class="form-control" value=""  placeholder="Email">
                </div>
                <div class="form-group">
                  <input name="passwordFromFront" type="password" class="form-control" value="" placeholder="Password">
                </div>

                <button type="submit" class="btn btn-danger">Confirm</button>
              </form>

            </div>

          </div>

          <!-- SIGN UP AREA -->
          <div class="col-12 col-sm-6 ">

            <div class="formArea  ">
              <h4 class="titleForm ml-0 mr-0 mb-3 ">Sign up:</h4>

              <form action="/users/sign-up" method="POST">
                <div class="form-group">
                  <input name="nameFromFront" value="" type="text" class="form-control" placeholder="Name">
                </div>
                <div class="form-group">
                  <input name="firstnameFromFront" value="" type="text" class="form-control" placeholder="Firstname">
                </div>
                <div class="form-group">
                  <input name="emailFromFront" value="" type="email" class="form-control"  placeholder="Email">
                </div>
                <div class="form-group">
                  <input name="passwordFromFront" value="" type="password" class="form-control"  placeholder="Password">
                </div>

                <button type="submit" class="btn btn-danger">Confirm</button>
              </form>
            </div>

          </div>
        </div>

          

        </div>
      </div>

    



    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" ></script>
  </body>
</html>

